<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/CardView_MsgInfaltor"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="4dp"
        android:elevation="12dp"
        app:cardCornerRadius="40dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">
        <ImageView
            android:id="@+id/SenderImage_MsgInfaltor"
            android:layout_height="70dp"
            android:layout_width="match_parent"
            android:src="@mipmap/ic_defaultimage"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/ImageProfile_description">
        </ImageView>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/From_MSGInflator"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/CardView_MsgInfaltor"/>

    <TextView
        android:id="@+id/Message_MSGInflator"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/CardView_MsgInfaltor"
        android:layout_below="@+id/From_MSGInflator"/>

</RelativeLayout>
